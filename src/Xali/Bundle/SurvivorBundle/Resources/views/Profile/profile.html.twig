{# src/SurvivorBundle/Resources/views/Profile/profile.html.twig #}

{% extends "XaliSurvivorBundle::base_survivor.html.twig" %}

{#Overwrite survivor_body block#}
{% block survivor_body %}
    <div class="text-center">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h1>{{ "Firstname" }}</h1>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <h1>{{ "Lastname" }}</h1>
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.birth_on"|trans }} xxxx-xx-xx
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.eyes_color"|trans }} {{ "color" }}
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.weight"|trans }} {{ "weight" }} {{ "unit" }}
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.height"|trans }} {{ "height" }} {{ "unit" }}
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.hair_color"|trans }} {{ "color" }}
            </div>
            <button class="btn btn-success col-lg-2 col-lg-offset-2">{{ "profile.left"|trans }}</button>
        </div>
    </div>
    
    
    
    
    
    
    
    
    
    
    
    
    
    
{% endblock %}

