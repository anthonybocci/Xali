{# src/CampBundle/Resources/views/Profile/profile.html.twig #}

{% extends "XaliCampBundle::base_camp.html.twig" %}

{#Overwrite camp_body block#}
{% block camp_body %}
    <div class="text-center">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1>{{ "Camp's name" }}</h1>
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.created_on"|trans }} xxxx-xx-xx
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.nb_survivors"|trans }} {{ "x" }} {{ "profile.survivors"|trans }}
            </div>
        </div><br />
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                {{ "profile.nb_volunteers"|trans }} {{ "x" }} {{ "profile.volunteers"|trans }}
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <button class="btn btn-info">{{ "profile.assign_volunteer"|trans }}</button>
            </div>
        </div>
    </div>
{% endblock %}